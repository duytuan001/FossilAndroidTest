<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.App.Transition">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowSharedElementsUseOverlay">true</item>
        <item name="android:windowSharedElementEnterTransition">@transition/smooth_transition</item>
        <item name="android:windowSharedElementExitTransition">@transition/smooth_transition</item>
    </style>

    <style name="Theme.App.Splash">
        <item name="android:windowBackground">@drawable/bg_splash_screen</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="FloatingActionButton.Home" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="maxImageSize">32dp</item>
        <item name="android:stateListAnimator">@animator/btn_scale_state</item>
        <item name="fabCustomSize">48dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="ViewClickable">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="ViewCircleClickable">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="Button">
        <item name="android:stateListAnimator">@animator/btn_scale_state</item>
    </style>

    <style name="Button.Toolbar" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">@dimen/space</item>
        <item name="android:paddingEnd">@dimen/space</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/space_54</item>
        <item name="android:stateListAnimator">@animator/btn_scale_state</item>
    </style>

    <style name="Button.WeekDay" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textColor">@color/color_text_btn_week_day</item>
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/space_48</item>
        <item name="android:stateListAnimator">@animator/btn_scale_state</item>
    </style>

    <style name="Button.Delete" parent="Widget.MaterialComponents.Button">
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/red</item>
        <item name="cornerRadius">@dimen/space_8</item>
        <item name="backgroundTint">@color/black_light_2</item>
        <item name="android:paddingTop">@dimen/space_10</item>
        <item name="android:paddingBottom">@dimen/space_10</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:stateListAnimator">@animator/btn_scale_state</item>
    </style>
</resources>